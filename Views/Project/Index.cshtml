@using LOGIC;
@model List<LOGIC.Project>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <div></div>
    <table>
        <tr>
            <th>
                Project
            </th>
            <th>
                Owner
            </th>
            <th>
                Last Edit
            </th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <th>
                    @Html.ActionLink( @m.ProjectName, "OpenProject", new { projectId = @m.Id } )  
                </th>
                <th>
                    functionaliteit toevoegen
                </th>
                <th>
                <!--    m.LastEditDate -->
                </th>
                <th>
                    @Html.ActionLink("Delete", "Remove", new { projectId = @m.Id })
                </th>
                <th>
                    @Html.ActionLink("Add new user to project", "AddUser", new { projectId = @m.Id })
			    </th>
            </tr>
        }
    </table>

    <form method="post" asp-action="Add" asp-controller="Project">
        <input type="text" name="projectName" />
        <input type="submit" value="New Project" />
    </form>
</div>