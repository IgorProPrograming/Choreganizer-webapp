@model UserProfile
@using LOGIC
@{
	ViewData["Title"] = "Login";
}

<h1>
@ViewBag.Message
</h1>
<br />
<form method="post" asp-action="Login" asp-controller="Authentication">
    <input type="text" name="Username" placeholder="Username"/>
