@using LOGIC;
@model List<LOGIC.Chore>
@*

*@
@{
}
@ViewBag.Id

<div>
    <div></div>
    <table>
        <tr>
            <th>
                Chore
            </th>
            <th>
                Remove
            </th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <th>
                    @m.ChoreName
                    @m.Id
                </th>
                <th>

                    <form method="post" asp-action="Remove" asp-controller="ChoreTable">
						<input type="hidden" name="choreId" value="@m.Id" />
						<input type="submit" value="Remove" />
                    </form>


                </th>
            </tr>
        }
    </table>

    <form method="post" asp-action="Add" asp-controller="ChoreTable">
		<input type="text" name="choreName" />
		<input type="submit" value="Add Chore" />
    </form>
</div>